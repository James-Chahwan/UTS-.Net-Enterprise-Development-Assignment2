@model IEnumerable<BlueConsultingManagementSystem.Models.Report>

@{
    ViewBag.Title = "Your Staff Rejected Reports";
}

<h2>Your Staff Rejected Reports</h2>

<table class="table">
    <tr>
        <th>
            Report Name
        </th>
        <th>
            Consultant Name
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>
    @* just an iteration  *@
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ReportName, "DetailsOnly", new { ReportID = item.ReportPK })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsultantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>

    </tr>
}

</table>
