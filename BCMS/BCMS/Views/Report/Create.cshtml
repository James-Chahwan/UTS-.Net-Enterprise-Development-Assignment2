@model BlueConsultingManagementSystem.Models.Report

@{
    ViewBag.Title = "Create a New Report";
}

<h2>Create a New Report</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ReportName,"Report Name:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReportName)
                @Html.ValidationMessageFor(model => model.ReportName)
            </div>
        </div>

        <div class="form-group">
    @Html.LabelFor(model => model.type, "Department Type:" ,new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                @Html.DropDownListFor(model => model.type, new[]{
           new SelectListItem {Text = "Higher Education", Value = "HigherEducation"},
           new SelectListItem {Text = "Logistics", Value = "Logistics"},
           new SelectListItem {Text = "State", Value = "State"}})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
