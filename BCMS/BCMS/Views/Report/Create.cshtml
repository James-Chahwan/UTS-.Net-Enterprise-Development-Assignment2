@model BlueConsultingManagementSystem.Models.Report

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Report</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ReportName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReportName)
                @Html.ValidationMessageFor(model => model.ReportName)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.type)
                @Html.ValidationMessageFor(model => model.type)
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.SupervisorName)
        @Html.ValidationMessageFor(model => model.StaffApproval)
        @Html.ValidationMessageFor(model => model.SupervisorApproved)
        @Html.ValidationMessageFor(model => model.ConsultantName)
        @Html.ValidationMessageFor(model => model.DateOfApproval)
        @Html.ValidationMessageFor(model => model.ReportPK)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
